<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbds.deptinfo.barcodebattler.Details"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/p"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/n"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="nom"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/cat"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="prenom"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/n"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/forc"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="force"
        android:layout_below="@+id/cat"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/arme"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="arme"
        android:layout_below="@+id/p"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/attack"

        android:text="Attack !!!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/def"

        android:text="Protec!!!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBaseline="@+id/attack"
        android:layout_alignBottom="@+id/attack"
        android:layout_alignParentEnd="true" />



    <TextView
        android:id="@+id/n1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="nom"
        android:layout_alignTop="@+id/p1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/cat1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="prenom"
        android:layout_alignTop="@+id/p1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:id="@+id/forc1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="force"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/arme1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="arme"
        android:layout_above="@+id/n1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/p1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>